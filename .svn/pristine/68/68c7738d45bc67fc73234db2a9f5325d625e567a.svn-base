namespace Datos.Contable
{
    using System;
    using System.Collections.Generic;
    using System.Linq;
    using System.Text;
    using Entities;

    /// <summary>
    /// TODO: Update summary.
    /// </summary>
    public class inflacionc
    {
        public inflacionc()
        {
        }

        public List<inflacion> CargarDatos()
        {
            List<inflacion> infla = new List<inflacion>();
            using (siimnEntities bd = new siimnEntities())
            {
                var query = bd.inflacion.ToList();
                infla = query;
            }

            return infla;
        }

        public bool GuardarInflacion(List<inflacion> infla)
        {
            bool result = false;
            using (siimnEntities bd = new siimnEntities())
            {
                try
                {
                    foreach (inflacion item in infla)
                    {
                        var query = bd.inflacion.Where(inf => inf.mes == item.mes).First();
                        query.inflamensual = item.inflamensual;
                    }

                    bd.SaveChanges();
                    result = true;
                }
                catch (Exception ex)
                {
                    throw ex;
                }
            }

            return result;
        }
    }
}
