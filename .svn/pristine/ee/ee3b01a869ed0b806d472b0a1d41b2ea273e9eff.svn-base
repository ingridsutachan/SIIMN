        #region GUARDAR DATOS

        /// <summary>
        /// Guardar campos
        /// </summary>
        /// <returns>centro de costos con los campos a guardar</returns>
        private CentroDataSource GuardarCampos()
        {
            CentroDataSource cen = new CentroDataSource();
            cen.Nombrecentro = txt_nombre.Text;
            cen.IdCompania = Program.compa;
            return cen;
        }

        /// <summary>
        /// Handles the Click event of the Btn_guardar control.
        /// </summary>
        /// <param name="sender">The source of the event.</param>
        /// <param name="e">The <see cref="EventArgs"/> instance containing the event data.</param>
        private void Btn_guardar_Click(object sender, EventArgs e)
        {
            if (!txt_nombre.Text.Equals(string.Empty))
            {
                if (txt_nombre.ReadOnly == false)
                {
                    CentroDataSource cen = new CentroDataSource();
                    cen = this.GuardarCampos();
                    try
                    {
                        bool guardar = this.negociocentro.GuardarCentro(cen);
                        if (guardar)
                        {
                            MessageBox.Show("El centro de costos ha sido Guardado", "GUARDAR", MessageBoxButtons.OK);
                            this.CargarDatos();
                            txt_nombre.Text = string.Empty;
                            txt_nombre.Enabled = false;
                            btn_guardar.Visible = false;
                        }
                    }
                    catch (Exception ex)
                    {
                        MessageBox.Show("Se presento un error. " + ex.Message);
                    }
                }

                else
                {
                    CentroDataSource cen = new CentroDataSource();
                    cen = this.GuardarCampos();
                    cen.Codcentro = this.idcentro;
                    try
                    {
                        bool guardo = this.negociocentro.ActualizarCentro(cen);
                        if (guardo)
                        {
                            MessageBox.Show("El centro de costos ha sido Actualizado", "ACTUALIZAR", MessageBoxButtons.OK);
                            this.CargarDatos();
                            txt_nombre.Text = string.Empty;
                            txt_nombre.Enabled = false;
                        }
                    }
                    catch (Exception ex)
                    {
                        MessageBox.Show("Se presento un error. " + ex.Message);
                    }
                }
            }
            else
            {
                MessageBox.Show("Debe ingresar el campo ", "ERROR", MessageBoxButtons.OK);
            }
        }
        #endregion

