namespace Datos.Contable
{
    using System;
    using System.Collections.Generic;
    using System.Linq;
    using System.Text;
    using Entities;

    /// <summary>
    /// TODO: Update summary.
    /// </summary>
    public class tributariosc
    {
        public tributariosc()
        {
        }

        public List<maetribub> CargarTributario()
        {
            List<maetribub> tribut = new List<maetribub>();
            using (contableEntities bd = new contableEntities())
            {
                try
                {
                    tribut = bd.maetribub.ToList();
                }
                catch (Exception ex)
                {
                    throw ex;
                }
            }

            return tribut;
        }

        public bool GuardarTribut(maetribub tribut)
        {
            bool result = false;
            using (contableEntities bd = new contableEntities())
            {
                try
                {
                    bd.maetribub.Add(tribut);
                    bd.SaveChanges();
                    result = true;
                }
                catch (Exception ex)
                {
                    throw ex;
                }
            }

            return result;
        }

        public maetribub DevolverDatos(string codigo)
        {
            maetribub tribut = new maetribub();
            using (contableEntities bd = new contableEntities())
            {
                try
                {
                    var query = bd.maetribub.Where(tip => tip.codigotrib == codigo).First();
                    tribut = query;
                }
                catch (Exception ex)
                {
                    throw ex;
                }
            }

            return tribut;
        }

        public bool ActualizarTribut(maetribub tribut)
        {
            bool result = false;
            using (contableEntities bd = new contableEntities())
            {
                try
                {
                    var query = bd.maetribub.Where(mae => mae.codigotrib == tribut.codigotrib).First();
                    query.codigotrib = tribut.codigotrib;
                    query.nombre = tribut.nombre;
                    query.tope = tribut.tope;
                    query.nomnit = tribut.nomnit;
                    query.nittope = tribut.nittope;
                    bd.SaveChanges();
                    result = true;
                }
                catch (Exception ex)
                {
                    throw ex;
                }
            }

            return result;
        }

        public bool EliminarTributario(string codigo)
        {
            bool result = false;
            using (contableEntities bd = new contableEntities())
            {
                try
                {
                    var query = bd.maetribub.Where(mae => mae.codigotrib == codigo).First();
                    bd.maetribub.Remove(query);
                    bd.SaveChanges();
                    result = true;
                }
                catch (Exception ex)
                {
                    throw ex;
                }
            }

            return result;
        }

        public List<maetribub> BuscarTributario(string buscar)
        {
            List<maetribub> tribut = new List<maetribub>();
            using (contableEntities bd = new contableEntities())
            {
                try
                {
                    var query = bd.maetribub.Where(mae => mae.codigotrib.Contains(buscar) || mae.nombre.Contains(buscar) || mae.nomnit.Contains(buscar)).ToList();
                    tribut = query;
                }
                catch (Exception ex)
                {
                    throw ex;
                }
            }

            return tribut;
        }
    }
}
