                MessageBox.Show("SE PRESENTO UN ERROR." + ex.Message, "ERROR");
            }
            if (this.tipoaux == 1)
            {
                txt_cuentaini.AutoCompleteCustomSource = cuentas;
                txt_cuentafin.AutoCompleteCustomSource = cuentas;
            }
