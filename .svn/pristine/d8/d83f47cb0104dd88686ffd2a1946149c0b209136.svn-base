namespace Datos.Contable
{
    using System;
    using System.Collections.Generic;
    using System.Linq;
    using System.Text;
    using Entities;
    

    /// <summary>
    /// TODO: Update summary.
    /// </summary>
    public class formatosc
    {
        public formatosc()
        {
        }

        public bool Guardarformato(formatosbpyg format, string encabezado)
        {
            bool result = false;
            using (siimnEntities bd = new siimnEntities())
            {
                if (format.tipoformato.Equals("1"))
                {
                    var query = bd.formatosbpyg.Where(frm => frm.idformato == 1).First();
                    query.nombref = encabezado;
                }
                if (format.tipoformato.Equals("2"))
                {
                    var query = bd.formatosbpyg.Where(frm => frm.idformato == 2).First();
                    query.nombref = encabezado;
                }
                bd.formatosbpyg.Add(format);
                bd.SaveChanges();
                result = true;
            }

            return result;
        }

        public bool ExisteFormato(formatosbpyg format)
        {
            bool result = false;
            using (siimnEntities bd = new siimnEntities())
            {
                var query = bd.formatosbpyg.Where(frm => frm.clasemayor == format.clasemayor && frm.linea == format.linea && frm.tipoformato == format.tipoformato).Count();
                result = query > 0 ? true : false;
            }
            return result;
        }


        public formatosbpyg DevolverFormato(formatosbpyg format)
        {
            formatosbpyg form = new formatosbpyg();
            using (siimnEntities bd = new siimnEntities())
            {
                var query = bd.formatosbpyg.Where(frm => frm.clasemayor == format.clasemayor && frm.linea == format.linea && frm.tipoformato == format.tipoformato).First();
                form = query;
            }
            return form;
        }

        public string DevolverEncabezado(string tipoencabezado)
        {
            string encabezado;
            int idbanlace = int.Parse(tipoencabezado);
            using (siimnEntities bd = new siimnEntities())
            {
                var query = bd.formatosbpyg.Where(frm => frm.idformato == idbanlace).First();
                encabezado = query.nombref;
            }
            return encabezado;
        }

        public bool ActualizarFormato(formatosbpyg format, string encabezado)
        {
            bool result = false;
            using (siimnEntities bd = new siimnEntities())
            {
                if (format.tipoformato.Equals("1"))
                {
                    var query = bd.formatosbpyg.Where(frm => frm.idformato == 1).First();
                    query.nombref = encabezado;
                }
                if (format.tipoformato.Equals("2"))
                {
                    var query = bd.formatosbpyg.Where(frm => frm.idformato == 2).First();
                    query.nombref = encabezado;
                }
                var query1 = bd.formatosbpyg.Where(frm => frm.clasemayor == format.clasemayor && frm.linea == format.linea && frm.tipoformato == format.tipoformato).First();
                query1.nombref = format.nombref;
                query1.cuentaini = format.cuentaini;
                query1.cuentafin = format.cuentafin;
                bd.SaveChanges();
                result = true;
            }

            return result;
        }
    }
}
