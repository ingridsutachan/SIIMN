                        if (cuentaver.Centro)
                        {
                            txt_centro.Enabled = true;
                            this.activo = 1;
                        }

                        if (cuentaver.Pidenit)
                        {
                            txt_nit.Enabled = true;
                            this.activo = 1;
                        }
                        txt_detalle.Enabled = true;
                        txt_referencia.Enabled = true;
                        txt_credito.Enabled = true;
                        txt_debito.Enabled = true;
