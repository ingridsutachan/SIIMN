        public List<parametro> CargarDatosComprobante()
        {
            List<parametro> param = new List<parametro>();
            using (siimnEntities bd = new siimnEntities())
            {
                var query = bd.parametro.Where(par => par.nombreparam == "cueniniing" || par.nombreparam == "cuenfining" || par.nombreparam == "cueninicos"
                    || par.nombreparam == "cuenfincos" || par.nombreparam == "cuenuti" || par.nombreparam == "codcomp" || par.nombreparam == "descomp").ToList();
                param = query;
            }

            return param;
        }

        public bool GuardarDatosComprobante(List<parametro> param)
        {
            bool result = false;
            using (siimnEntities bd = new siimnEntities())
            {
                var query = bd.parametro.Where(par => par.nombreparam == "cueniniing").First();
                query.valorparam = param[0].valorparam;
                var query1 = bd.parametro.Where(par => par.nombreparam == "cuenfining").First();
                query1.valorparam = param[1].valorparam;
                var query2 = bd.parametro.Where(par => par.nombreparam == "cueninicos").First();
                query2.valorparam = param[2].valorparam;
