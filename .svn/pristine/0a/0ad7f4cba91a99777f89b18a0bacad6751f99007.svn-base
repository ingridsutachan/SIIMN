                query4.valorparam = param[4].valorparam;
                var query5 = bd.parametro.Where(par => par.nombreparam == "codcomp").First();
                query5.valorparam = param[5].valorparam;
                var query6 = bd.parametro.Where(par => par.nombreparam == "descomp").First();
                query6.valorparam = param[6].valorparam;
                bd.SaveChanges();
                result = true;
            }

            return result;
        }

